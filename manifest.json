{
   "name": "Hot keys for Spotify Web Player",
   "description": "Add keyboard shortcuts for Spotify Web Player",
   "version": "1.0",
   "manifest_version": 2,

   "background": {
      "persistent": false,
      "scripts": [ "background.js" ]
   },
   "commands": {
      "next": {
         "description": "Next track",
         "suggested_key": "Ctrl+Right"
      },
      "play-pause": {
         "description": "Play/pause",
         "suggested_key": "Ctrl+Down"
      },
      "previous": {
         "description": "Previous track",
         "suggested_key": "Ctrl+Left"
      }
   },
   "permissions": [
     "https://open.spotify.com/*",
     "https://play.spotify.com/*" ]
}
